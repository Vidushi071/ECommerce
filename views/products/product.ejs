<% layout('./layout/boilerplate') -%>

<div class="container">

        <div class="row">
  
            <% for(const product of products) { %>

                <div class="card col-3 mx-auto mt-4" style="width: 18rem;padding: 0;">

                    <img src="<%= product.img  %>" class="card-img-top" alt="..." style="width: 100%; height: 200px;">
                    <div class="card-body">
                      <h5 class="card-title"> <%= product.name %> </h5>
                      
                      <p class="card-text"> <%= product.desc %></p>

                    </div>
                    <div class="cardFooter">
                      <h5 class="card-title">$ : <%= product.price %> </h5>
                        <a href="/products/<%=product._id %>" class="btn btn-primary" style="margin-top: 10px;"> Show </a>

                        <a href="/products/<%=product._id %>/edit" class="btn btn-primary" style="margin-top: 10px;"> Update </a>
  
                        <form method="post"  action="/products/<%=product._id %>?_method=DELETE">
  
  
  
                        </form>
  
                      </div>
                  
            
                    </div>

                    <% } %>
            
                </div>

            </div>

                  

  

